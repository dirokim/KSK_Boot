<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.winter.app.board.notice.NoticeDAO">
  	
  	
  	<select id="getTotalCount" resultType="Long" parameterType="Pager">
  		SELECT COUNT(NOTICENUM) FROM NOTICE 
  		<include refid="search"></include> 
  	</select>
  	
  	<sql id="search" >
  	<where>
  	<choose>
  	<when test="kind=='kind1'">NOTICEHEAD</when>
  	<when test="kind=='kind2'">NOTICECONTENTS</when>
  	<otherwise>NOTICEWRITER</otherwise>
  	</choose>
		LIKE CONCAT('%',#{search},'%')
  	</where>
  	</sql>
  	
  	<select id="getList"  resultType="NoticeVO" parameterType="Pager">
  		SELECT * FROM NOTICE 
  		<include refid="search"></include> 
  		ORDER BY NOTICENUM DESC
  		LIMIT #{startIndex},#{perPage}
  	</select>
  
  	<insert id="add" parameterType="NoticeVO">
  		INSERT INTO NOTICE (NOTICEWRITER,NOTICEHEAD,NOTICECONTENTS,NOTICEDATE,NOTICEVIEWS)
  		 VALUES(#{noticeWriter},#{noticeHead},#{noticeContents},now(),0)
  	</insert>
  
	  
  
  </mapper>
